<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="kenma.MainWindow"
            stylesheets="@styles.css"
            prefHeight="420.0" prefWidth="320.0">
    <children>
        <VBox spacing="6.0"
              AnchorPane.topAnchor="8.0"
              AnchorPane.bottomAnchor="8.0"
              AnchorPane.leftAnchor="8.0"
              AnchorPane.rightAnchor="8.0">
            <children>
                <Label fx:id="titleLabel"
                       text="Kenma"
                       style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <ListView fx:id="dialogContainer" VBox.vgrow="ALWAYS"/>
                <HBox spacing="6.0">
                    <children>
                        <TextField fx:id="userInput" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
                        <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
